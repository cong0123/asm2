<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>ATN shop</title>
</head>

<body>
    <h1>Add product</h1>

    <form action="/quotes" method="POST">
        <input type="text" placeholder="id" name="id" />
        <input type="text" placeholder="name product" name="nameproduct" />
        <input type="text" placeholder="type" name="type" />
        <button type="submit">Submit</button>
    </form>

    <h2> View product</h2>
    <ul class="quotes">
        <!-- Loop through quotes -->
        <% for(var i=0; i < quotes.length; i++) {%>
            <li class="quote">
                <!-- Output name from the iterated quote object -->
                <span>
                    <%= quotes[i].id %>
                </span>:
                <!-- Output quote from the iterated quote object -->
                <span>
                    <%= quotes[i].nameproduct %>
                </span>:
                <span>
                    <%= quotes[i].type %>
                </span>
            </li>
            <% } %>
    </ul>
    
</body>

</html>